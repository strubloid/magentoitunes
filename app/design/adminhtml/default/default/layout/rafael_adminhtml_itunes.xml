<?xml version="1.0"?>
<layout>

    <adminhtml_itunes_index>
        <reference name="content">
            <block type="rafael_itunes/adminhtml_tracks" name="itunes_index" template="itunes/index.phtml"/>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/itunes/all.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>js/itunes/jquery.bootgrid-1.3.1/jquery.bootgrid.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/itunes/adminhtml.css</name>
            </action>
            <action method="addJs">
                <script>lib/jquery/jquery-1.12.1.min.js</script>
            </action>
            <action method="addJs">
                <script>lib/jquery/noconflict.js</script>
            </action>
            <action method="addJs">
                <script>prototype/validation.js</script>
            </action>
            <action method="addJs">
                <script>mage/adminhtml/form.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/itunes/jquery.bootgrid-1.3.1/jquery.bootgrid.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/itunes/jquery.bootgrid-1.3.1/jquery.bootgrid.fa.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/itunes/adminhtml.js</name>
            </action>
        </reference>
    </adminhtml_itunes_index>

</layout>